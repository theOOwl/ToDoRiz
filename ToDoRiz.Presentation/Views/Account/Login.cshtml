@model Application.DTO.LoginDTO.LoginDTOs
@{
    ViewData["Title"] = "Login";
            Layout = "_AccountLayout";
}
<section  style="background-color: black">
  <div class="container py-5 h-200">
    <div class="row d-flex justify-content-center align-items-center h-100">
            <p align="center" style="font-family:'Maiandra GD';font-size:xx-large;color:darkorange;margin-top:100px"> To Do Riz </p>
      <div class="col col-lg-9 col-xl-7">
        <div class="card rounded-3">
          <div class="card-body p-4">


<section class="vh-100 bg-image"
  style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');">
  <div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card" style="border-radius: 15px;">
            <div class="card-body p-5">
              <h2 style="font-family:Calibri" class="text-uppercase text-center mb-5">ساخت اکانت</h2>

              <form method="post" asp-action="Login" asp-controller="Account">

                  <div class="form-outline mb-4">
                  <input type="text" id="form3Example2cg" class="form-control form-control-lg"  asp-for="Mobile" required="required"/>
                  <label style="font-family:Calibri" class="form-label" for="form3Example2cg">موبایل </label>
                </div>

                <div class="form-outline mb-4">
                    <span style="color:red ; font-family:Calibri; font-size:smaller" asp-validation-for="Password"></span>
                  <input type="password" id="form3Example4cg" class="form-control form-control-lg" asp-for="Password" required="required"/>
                  <label style="font-family:Calibri" class="form-label" for="form3Example4cg">کلمه عبور</label>
                </div>
                <div class="d-flex justify-content-center">
                  <button type="submit"
                  style="font-family:Calibri"  class="btn btn-success btn-block btn-lg gradient-custom-4 text-body">ورود</button>
                </div>

                <p style="font-family:Calibri" class="text-center text-muted mt-5 mb-0">آیا قبلا ثبت نام نکرده اید ؟ <a asp-controller="Account" asp-action="Register"
                 style="font-family:Calibri"   class="fw-bold text-body"><u>ثبت نام</u></a></p>

              </form>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>





          </div>
        </div>
      </div>
    </div>
  </div>
</section>